<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MahjongScorer10" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MahjongScorer10.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MahjongScorer10.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MahjongScorer10.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="complete">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="available">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="error">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="tile">
        <item name="android:padding">@dimen/displayTilePadding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tile_border</item>
    </style>
</resources>